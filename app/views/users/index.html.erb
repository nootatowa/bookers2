<div class="container px-5 px-sm-0">
<div class="row">
<%= render 'books/list', books: @books %>
<div class="col-md-8 offset-md-1">

  <h2>Users</h2>
  <table class="table">
<thead>
<tr>
  <th></th>
  <th>image</th>
  <th>name</th>
  <th colspan="3"></th>
</tr>
</thead>
  <% @users.each do |user| %>
  <tr>
   <td>
     <%= image_tag user.get_profile_image(40,40) %>
   </td>
   <td>
     <%= user.name %>
   </td>
   <td> <%= link_to "Show", user_path(user.id) %> </td>
  </tr>
 <% end %>
</thead>
</table>
</div>
</div>
</div>